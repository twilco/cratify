{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "tslint-config-airbnb"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "import-name": [false],
    "max-line-length": [true, 120],
    "no-console": [false],
    "no-duplicate-imports": [false], // Have to do this due to: https://github.com/palantir/tslint/issues/3418
    "semicolon": [true, "never"],
    "variable-name": [false]
  }
}
